{
  "exclude": ["node_modules", "**/*.css", "**/*.scss"],
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "../",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "ES2020"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "ES2020",
    "typeRoots": ["../"],
    "types": [],
    "paths": {
      "@kunukn/react-collapse": ["types/index.d.ts"],
      "~/*": ["*"],
      "src/*": ["./src/*"],
      "lib/*": ["./lib/*"]
    }
  }
}
